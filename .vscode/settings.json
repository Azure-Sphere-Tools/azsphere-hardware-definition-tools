{
	"tslint.enable": true,
	"typescript.tsc.autoDetect": "off",
	"typescript.preferences.quoteStyle": "double",
	"javascript.preferences.quoteStyle": "double", 
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"editor.insertSpaces": true,
	"editor.tabSize": 2,
	"mochaExplorer.mochaPath": "node_modules/mocha",
	"mochaExplorer.files": [
		"server/dist/test/*.test.js"
	],
	"mochaExplorer.ui": "tdd",
	"mochaExplorer.autoload": true,
	"mochaExplorer.require": "source-map-support/register",
	// workaround to make mocha test explorer work. Remove when fixed in server.ts
	"mochaExplorer.env": {
		"LANGUAGE_SERVER_MODE": "TEST"
	}
}